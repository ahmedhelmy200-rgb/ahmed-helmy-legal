# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ahmed-helmy-legal

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:5000/api

# JWT Configuration (if needed for authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,xlsx,xls

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@ahmed-helmy-legal.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Admin Configuration
ADMIN_EMAIL=admin@ahmed-helmy-legal.com
ADMIN_PASSWORD=admin_password_here